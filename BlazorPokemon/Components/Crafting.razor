@page "/bataille"
<CascadingValue Value="@this">
    <div class="container">
        <div class="row">
            <div class="col-6">

                <div>Available items:</div>
                <div>
                    <div class="css-grid">
                        @if(Pokemons != null){
                            @foreach (var pokemon in Pokemons)
                            {
                                <CraftingItem Pokemon="pokemon" NoDrop="true" />
                            }
                        }
                    </div>
                </div>

            </div>

            <div class="col-6">
                <div>Recipe</div>

                <div>

                    <div class="css-recipe">
                        <CraftingItem Index="0" />
                        <CraftingItem Index="1" />
                    </div>
                </div>

                <div>Result</div>
                <div>
                    <CraftingItem Pokemon="RecipeResult" />
                </div>
            </div>

            <div class="col-12">
                <div>Actions</div>
                <div class="actions" id="actions">
                </div>
            </div>
        </div>
    </div>
</CascadingValue>
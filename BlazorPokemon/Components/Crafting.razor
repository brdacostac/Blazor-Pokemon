@page "/bataille"
@using System.Globalization

<CascadingValue Value="@this">
    <div class="container">
        <div class="row">
            <div class="col-6">

                <div><h2> @Localizer["Pokemons"] </h2></div>
                <div>
                    <div class="css-grid">
                        @if(Pokemons != null){
                            @foreach (var pokemon in Pokemons)
                            {
                                <CraftingItem Pokemon="pokemon" NoDrop="true" />
                            }
                        }
                    </div>
                </div>

            </div>

            <div class="col-6">
                <div><h2>@Localizer["Bataille"]</h2></div>

                <div>
                    <div class="css-recipe">
                        <CraftingItem @ref="refPokemon[0]" Index="0" />
                        <img src="https://www.pngall.com/wp-content/uploads/5/Versus-Transparent.png" style="width:100%"/>
                        <CraftingItem @ref="refPokemon[1]" Index="1" />
                    </div>
                </div>
                <div class="gagnant"> <h2>@Localizer["Gagnant"]</h2></div>
                <div class="resultat">
                    <CraftingItem Pokemon="RecipeResult" />
                </div>
            </div>

            <div class="col-12">
                <div>Actions</div>
                <div class="actions" id="actions">
                </div>
            </div>
        </div>
    </div>
</CascadingValue>

